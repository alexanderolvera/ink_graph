{
  "name": "ink_graph",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "description": "simple ink levels calculator for CGS",
  "author": "Alex Olvera : Virtual Packaging",
  "dependencies": {
    "@chakra-ui/react": "^1.8.6",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "framer-motion": "^6.2.8",
    "import": "^0.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-scripts": "^5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "electron-forge start",
    "package": "react-scripts build && electron-forge package",
    "make:forge": "react-scripts build && electron-forge make",
    "make": "react-scripts build && electron-builder build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.virtualpackaging.inkgrapher",
    "productName": "Ink Grapher",
    "win": {
      "target": "portable"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ink Grapher"
    },
    "portable": {},
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "dmg": {
      "sign": true
    }
  }
}
